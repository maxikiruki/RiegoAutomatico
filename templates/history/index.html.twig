{% extends 'base.html.twig' %}

{% block title %}Historial de riegos{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

 {% include "navbar/historynavbar.html.twig" %} 


<div class="containter">
	<div class="row-xs-12 row-sm-12 row-md-12 row-lg-12">
		<h1>Historial de riegos</h1>
	</div>
	<br>
	<table id="dtHorizontalExample" class="table table-responsive-xs" cellspacing="0" width="100%">
		<thead>
			<tr>
				<th>Nombre de sector</th>
				<th>Fecha</th>
				<th>Hora inicio</th>
				<th>Hora final</th>
				<th>Humedad inicial</th>
				<th>Humedad final</th>
				<th>Total litros</th>
			</tr>
		</thead>
		<tbody>
			{% for history in histories %}
			
				<tr>
					{# <td>{{ history.sector_id }}</td> #}
					  {% for sector in sectors %}
						{% if history.sector == sector %}
							<td>{{ sector.name }}</td>
							
						{% endif %}
					{% endfor %}
					
					<td>{{ history.date ? history.date|date('d-m-Y') }}</td>
					<td>{{ history.start_time ? history.start_time|date('H:i') }}</td>
					<td>{{ history.end_time ? history.end_time|date(' H:i') }}</td> 
					<td>{{ history.start_humidity }}</td>
					<td>{{ history.final_humidity }}</td>
					<td>{{ history.total_liters }}</td>
					 
				</tr>
			{% endfor %}
		</tbody>
	</table>
	
</div>

{% endblock %}

