{% extends 'base.html.twig' %}

{% block title %}History{% endblock %}

{% block body %}
    <h1>History</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ history.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ history.date ? history.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Start_time</th>
                <td>{{ history.startTime ? history.startTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_time</th>
                <td>{{ history.endTime ? history.endTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Humidity_initial</th>
                <td>{{ history.humidityInitial }}</td>
            </tr>
            <tr>
                <th>Humidity_final</th>
                <td>{{ history.humidityFinal }}</td>
            </tr>
            <tr>
                <th>Total_liters</th>
                <td>{{ history.totalLiters }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('history_index') }}">back to list</a>

    <a href="{{ path('history_edit', {'id': history.id}) }}">edit</a>

    {{ include('history/_delete_form.html.twig') }}
{% endblock %}
