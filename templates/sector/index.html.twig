{% extends 'base.html.twig' %}

{% block title %}Configurar sector{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% include "navbar/sectornavbar.html.twig" %} 

<div class="containter">
	<div class="row-xs-12 row-sm-12 row-md-12 row-lg-12">
		<h1>Estado del riego</h1>
	</div>
	<br>
	<table id="dtHorizontalExample" class="table table-responsive-xs" cellspacing="0" width="100%">
		<thead>
			<tr>
				<th>NÂº Sector</th>
				<th>Nombre del sector</th>
                <th>Horario</th>
                <th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			{% for sector in sectors %}
				<tr>
					<td>{{ sector.id }}</td>
					<td>{{ sector.name }}</td>
                    {% for schedule in schedules %}
                        {% if sector.schedule_id == schedule.id %}
                            <td>{{ schedule.name }}</td>
                        {% endif %}
                    {% endfor %}

                    <td><a href="{{ path('sector_edit',{'id': sector.id}) }}">Editar sector</a> </td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	
</div>


{% endblock %}
